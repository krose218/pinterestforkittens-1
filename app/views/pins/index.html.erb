<div class="jumbotron">




<h1>Listing pins</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Description</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @pins.each do |pin| %>
      <tr>
        <td><%= pin.description %></td>
        <td><%= time_ago_in_words pin.created_at %></td>
        <td><%= pin.user.try( :email ) %></td>
        <% if current_user == pin.user %>
        <td><%= link_to 'Show', pin %></td>
        <td><%= link_to 'Edit', edit_pin_path(pin) %></td>
        <td><%= link_to 'Destroy', pin, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% else %> 
        <td></td><td></td><td></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if user_signed_in? %>
<%= link_to 'New Pin', new_pin_path, class: "btn btn-primary btn-lg" %>
<% end %>
<br>
<br>
<br>



  

  <a class="btn btn-success btn-lg" role="button" href="/users/sign_in">Sign In</a>

  <a class="btn btn-success btn-lg" role="button" href="">Sign Out</a>







</div>